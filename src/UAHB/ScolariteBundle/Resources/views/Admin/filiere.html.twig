{% extends 'base.html.twig' %}

{% block body %}
    <br/><br/><br/><br/><br/><br/>
    
    <div class="container">
    <span class="label label-danger row col-sm-12" style="margin-left: auto; height:30px;font-size:20px">{{message}}</span><br/><br/>
       <fieldset class="cadre">
            <legend class="legende">Enrégistrement d'une Filière</legend>
        <div class="form-row">
                <div class="form-group row">
                <form method="post" name="form2">
                    <div class="form-group col-sm-12">
                        {{ form_widget(formFiliere.departement,{'attr':{'class':'form-control','placeholder':'Selectionner le département'}}) }}
                    </div>
                    <div class="form-group col-sm-12">
                        {{ form_widget(formFiliere.libelle,{'attr':{'class':'form-control','placeholder':'Saisir la filière'}}) }}
                    </div>  
                    <div class="form-group col-sm-12">
                        <input type="submit" name="validerDept" class="form-control btn btn-primary" value="Enregistrer"/>
                    </div>

                <form>
                </div>
                <div class="count">
                Nombre de Filière(s) trouvé(s) : {{ filieres.getTotalItemCount }}
                </div>
                <table  class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th style="width:70%">Libellé filière</th>
                                        <th style="width:15%">&nbsp;</th>
                                        <th style="width:15%">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for fil in filieres %}
                                        <tr>
                                            <td><b>{{ fil.libelle }}</b></td>
                                            <td><a href="{{ path('uahb_scolarite_admin_editfiliere', {'action':'edit','id': fil.id}) }}" class="btn btn-primary" role="button">Editer</a></td>
                                            <td><a href="{{ path('uahb_scolarite_admin_editfiliere', {'action':'del','id': fil.id}) }}" class="btn btn-primary" role="button">Supprimer</a></td>
                                        </tr>     
                                    {% else %}
                                        <tr>
                                            <td>Aucune filière n'a été trouvée</td>
                                        </tr> 
                                    {% endfor %}
                                </tbody>   
                </table>
                <div class="navigation">
                    {{ knp_pagination_render(filieres) }}
                </div>
            </div>
    </fieldset>
    </div>

      
{% endblock%}