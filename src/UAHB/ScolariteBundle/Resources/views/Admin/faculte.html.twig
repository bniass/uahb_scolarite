{% extends 'base.html.twig' %}

{% block body %}
    <br/><br/><br/>
    
    <div class="container">
        
        <fieldset class="cadre" style="margin-top:40px;">
            <legend class="legende">Enrégistrement d'une faculté</legend>
                <div class="form-group row">
                <form method="post" name="form1">
                    <div class="col-sm-10">
                        {{ form_widget(formFaculte.libelle,{'attr':{'class':'form-control','placeholder':'Saisir la faculté'}}) }}
                        </div>
                        {{ form_errors(formFaculte.libelle) }}
                        <div class="col-sm-2">                        
                        <div class="col-sm-4">
                        <input type="submit" name="validerFaculter" class="btn btn-primary" value="Enregistrer"/>
                    </div>  
                </form>    
                </div>
                <table  class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th style="width:70%">Libellé  faculté</th>
                                        <th style="width:15%">&nbsp;</th>
                                        <th style="width:15%">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for faculte in facultes %}
                                        <tr>
                                            <td><b>{{ faculte.libelle }}</b></td>
                                            <td><a href="{{ path('uahb_scolarite_admin_editfaculte', {'action':'editfaculte','id': faculte.id}) }}" class="btn btn-primary" role="button">Editer</a></td>
                                            <td><a href="{{ path('uahb_scolarite_admin_editfaculte', {'action':'removefaculte','id': faculte.id}) }}" class="btn btn-primary" role="button">Supprimer</a></td>
                                        </tr>     
                                    {% else %}
                                        <tr>
                                            <td>Aucune faculté n'a été trouvée</td>
                                        </tr> 
                                    {% endfor %}
                                </tbody>   
                </table>
            
        </fieldset>
    </div>
    <br/>
    <div class="container">
    <span class="label label-danger row col-sm-12" style="margin-left: auto; height:30px;font-size:20px">{{message}}</span><br/><br/>
    <fieldset class="cadre">
            <legend class="legende">Enrégistrement d'un Département</legend>
        <div class="form-row">
                <div class="form-group row">
                <form method="post" name="form2">
                    <div class="form-group col-sm-12">
                        {{ form_widget(formDept.faculte,{'attr':{'class':'form-control','placeholder':'Saisir le département'}}) }}
                    </div>
                    <div class="form-group col-sm-12">
                        {{ form_widget(formDept.libelle,{'attr':{'class':'form-control','placeholder':'Saisir le département'}}) }}
                    </div>  
                    <div class="form-group col-sm-12">
                        <input type="submit" name="validerDept" class="form-control btn btn-primary" value="Enregistrer"/>
                    </div>

                <form>
                </div>
                <div class="count">
                Nombre de département(s) trouvé(s) : {{ depts.getTotalItemCount }}
                </div>
                <table  class="table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th style="width:70%">Libellé département</th>
                                        <th style="width:15%">&nbsp;</th>
                                        <th style="width:15%">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for dept in depts %}
                                        <tr>
                                            <td><b>{{ dept.libelle }}</b></td>
                                            <td><a href="{{ path('uahb_scolarite_admin_editfaculte', {'action':'editdept','id': dept.id}) }}" class="btn btn-primary" role="button">Editer</a></td>
                                            <td><a href="{{ path('uahb_scolarite_admin_editfaculte', {'action':'removedept','id': dept.id}) }}" class="btn btn-primary" role="button">Supprimer</a></td>
                                        </tr>     
                                    {% else %}
                                        <tr>
                                            <td>Aucun département n'a été trouvé</td>
                                        </tr> 
                                    {% endfor %}
                                </tbody>   
                </table>
                <div class="navigation">
                    {{ knp_pagination_render(depts) }}
                </div>
            </div>
    </fieldset>
</div>

      
{% endblock%}